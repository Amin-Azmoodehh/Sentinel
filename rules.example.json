{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "SentinelTM Zero Tolerance Contract",
  "description": "A strict, non-negotiable contract for AI code generation, enforced by SentinelTM.",
  "version": "3.0.0",

  "definitions": {
    "pythonContract": {
      "type": "object",
      "properties": {
        "main_py_lines": { "const": 4 },
        "no_hardcoded_strings": { "const": true },
        "no_print_statements": { "const": true },
        "type_hints_required": { "const": true },
        "max_file_lines": { "const": 300 },
        "pep8_line_length": { "const": 79 },
        "absolute_imports_only": { "const": true },
        "config_from_yaml_only": { "const": true },
        "log_language": { "const": "en" },
        "modular_architecture_required": { "const": true }
      },
      "required": [
        "main_py_lines", "no_hardcoded_strings", "no_print_statements",
        "type_hints_required", "max_file_lines", "pep8_line_length",
        "absolute_imports_only", "config_from_yaml_only", "log_language",
        "modular_architecture_required"
      ]
    }
  },

  "properties": {
    "contract": { "$ref": "#/definitions/pythonContract" },
    "enforcement": {
      "type": "object",
      "properties": {
        "level": { "const": "ZERO_TOLERANCE" },
        "failureAction": { "const": "AUTOMATIC_REJECTION" },
        "scoreRequired": { "const": "10/10" }
      },
      "required": ["level", "failureAction", "scoreRequired"]
    },
    "validation": {
      "type": "object",
      "properties": {
        "preGenerationAcknowledgment": { "type": "string" },
        "postGenerationSelfAssessment": { "type": "boolean", "const": true },
        "evidenceRequired": { "type": "boolean", "const": true }
      },
      "required": ["preGenerationAcknowledgment", "postGenerationSelfAssessment", "evidenceRequired"]
    }
  },
  "required": ["contract", "enforcement", "validation"]
}
