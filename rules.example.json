{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "SentinelTM Zero Tolerance Contract",
  "description": "A comprehensive, strict, and non-negotiable contract for AI code generation enforced by SentinelTM. This contract ensures production-grade code quality across multiple languages and frameworks.",
  "version": "4.0.0",

  "metadata": {
    "author": "SentinelTM",
    "lastUpdated": "2025-01-04",
    "applicableTo": ["python", "typescript", "javascript", "go", "rust"]
  },

  "globalRules": {
    "architecture": {
      "maxFileLines": 300,
      "maxFunctionLines": 50,
      "maxFunctionComplexity": 10,
      "modularity": "REQUIRED",
      "separationOfConcerns": true,
      "singleResponsibilityPrinciple": true
    },
    "codeQuality": {
      "noHardcodedValues": true,
      "noMagicNumbers": true,
      "descriptiveNaming": true,
      "minVariableNameLength": 3,
      "noSingleLetterVars": ["i", "j", "k", "x", "y", "z"]
    },
    "security": {
      "noHardcodedCredentials": true,
      "noHardcodedUrls": true,
      "validateAllInputs": true,
      "sanitizeOutputs": true,
      "useEnvironmentVariables": true
    },
    "configuration": {
      "externalizeConfig": true,
      "configFormat": ["yaml", "json", "env"],
      "noInlineConfig": true,
      "versionedConfig": true
    },
    "errorHandling": {
      "explicitErrorHandling": true,
      "noSilentFailures": true,
      "meaningfulErrorMessages": true,
      "structuredLogging": true
    },
    "testing": {
      "testCoverageMin": 80,
      "unitTestsRequired": true,
      "integrationTestsRecommended": true,
      "e2eTestsForCriticalPaths": true
    },
    "documentation": {
      "functionDocstrings": true,
      "classDocstrings": true,
      "moduleDocstrings": true,
      "inlineCommentsForComplexLogic": true,
      "readmeForProjects": true
    }
  },

  "languageSpecific": {
    "python": {
      "entrypoint": {
        "filename": "main.py",
        "maxLines": 4,
        "mustImportOnly": true,
        "noLogic": true
      },
      "style": {
        "standard": "PEP8",
        "maxLineLength": 79,
        "indentation": 4,
        "quoteStyle": "single"
      },
      "typing": {
        "typeHintsRequired": true,
        "typeHintsCoverage": 100,
        "strictMode": true
      },
      "imports": {
        "absoluteOnly": true,
        "noRelativeImports": true,
        "noWildcardImports": true,
        "sortedAlphabetically": true
      },
      "forbidden": {
        "functions": ["print", "input"],
        "modules": ["subprocess.Popen", "os.system", "eval", "exec"]
      }
    },
    "typescript": {
      "style": {
        "standard": "ESLint",
        "maxLineLength": 100,
        "indentation": 2,
        "quoteStyle": "single",
        "semicolons": true
      },
      "typing": {
        "strictMode": true,
        "noImplicitAny": true,
        "noExplicitAny": false
      },
      "imports": {
        "pathMappings": true,
        "noRelativePaths": false,
        "sortedAlphabetically": true
      },
      "forbidden": {
        "functions": ["eval", "Function constructor"],
        "keywords": ["var"]
      }
    },
    "javascript": {
      "style": {
        "standard": "ESLint",
        "maxLineLength": 100,
        "indentation": 2,
        "quoteStyle": "single"
      },
      "modernSyntax": {
        "useES6Plus": true,
        "preferConst": true,
        "arrowFunctions": true,
        "templateLiterals": true,
        "destructuring": true
      },
      "forbidden": {
        "functions": ["eval", "Function constructor"],
        "keywords": ["var"]
      }
    }
  },

  "enforcement": {
    "level": "ZERO_TOLERANCE",
    "failureAction": "AUTOMATIC_REJECTION",
    "scoreRequired": "95/100",
    "noExceptions": true,
    "contractualBinding": true
  },

  "validation": {
    "preGeneration": {
      "acknowledgmentRequired": true,
      "explicitRulesCheck": true,
      "acknowledgmentText": "I acknowledge all SentinelTM rules and commit to following them without exception."
    },
    "postGeneration": {
      "selfAssessmentRequired": true,
      "evidenceRequired": true,
      "validationCommandsRequired": true,
      "scoreCalculationTransparent": true
    },
    "scoring": {
      "totalRules": 12,
      "passingScore": 95,
      "failureThreshold": 70
    }
  },

  "recommendedTools": {
    "linters": ["pylint", "flake8", "eslint", "tslint", "rustfmt"],
    "formatters": ["black", "prettier", "gofmt"],
    "typeCheckers": ["mypy", "pyright", "typescript"],
    "securityScanners": ["bandit", "safety", "snyk"]
  }
}
