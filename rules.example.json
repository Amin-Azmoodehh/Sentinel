{
  "entrypoint": {
    "filename": "main.py",
    "maxLines": 4,
    "mustImportOnly": true
  },
  "style": {
    "maxLineLength": 79,
    "noSideEffectsOnImport": true,
    "absoluteImportsOnly": true
  },
  "forbidden": {
    "functions": ["print(", "eval(", "exec(", "console.log("],
    "modules": ["subprocess", "os.system"]
  },
  "externalization": {
    "textsPath": "data/texts/*.yml",
    "configPath": "data/config/*.yml",
    "enforceNoHardcodedStrings": true
  },
  "quality": {
    "minCoverage": 80,
    "requireTests": true,
    "requireDocs": true
  }
}
